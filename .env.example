# Environment Variables - NEVER commit this file
# Copy this to .env.local and fill in your values

# MongoDB
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/burmese-digital-store?retryWrites=true&w=majority

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# App
NEXT_PUBLIC_APP_URL=https://burmesedigital.store
NEXT_PUBLIC_APP_NAME=Burmese Digital Store

# Order gating (temporary switch)
# true  = require verified email before placing orders
# false = allow orders without email verification
REQUIRE_EMAIL_VERIFICATION_FOR_ORDERS=false

# Google OAuth (Login/Register with Google)
# Create OAuth client in Google Cloud Console:
# - JavaScript origins: https://burmesedigital.store and/or http://localhost:3000
# - Keep GOOGLE_CLIENT_ID and NEXT_PUBLIC_GOOGLE_CLIENT_ID same value
GOOGLE_CLIENT_ID=
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# Admin Default (change after first setup)
ADMIN_EMAIL=admin@burmesedigital.store
ADMIN_PASSWORD=change-this-immediately
# Optional one-time admin seed secret (/api/admin/seed)
ADMIN_SECRET=
# Keep false in production except temporary first bootstrap
ENABLE_ADMIN_SEED=false

# OCR Settings
OCR_LANGUAGE=eng+mya

# Email - Resend (preferred)
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@burmesedigital.store
EMAIL_FROM_NAME=Burmese Digital Store

# Email - SMTP fallback (only if not using Resend API)
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=resend
# SMTP_PASS=re_xxxxxxxxxxxx

# Rate Limiting (optional - Upstash Redis for production)
# UPSTASH_REDIS_REST_URL=https://xxxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30
# Keep true in production so APIs fail safely if Redis rate limiter is unavailable
RATE_LIMIT_FAIL_CLOSED=true

# 3x-UI VPN Panel Credentials
XUI_USERNAME=
XUI_PASSWORD=
# Keep false to enforce valid TLS certificates (recommended)
XUI_ALLOW_INSECURE_TLS=false

# SSRF hardening: allowlist for outbound VPN panel domains
# Comma-separated. Examples:
# VPN_SERVER_ALLOWED_HOSTS=burmesedigital.store,jan.burmesedigital.store,sg2.burmesedigital.store
VPN_SERVER_ALLOWED_HOSTS=

# Storage (optional - default: local filesystem)
# STORAGE_PROVIDER=telegram
# STORAGE_PROVIDER=s3
# S3_BUCKET=
# S3_REGION=sgp1
# S3_ENDPOINT=https://sgp1.digitaloceanspaces.com
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_CDN_URL=
# TELEGRAM_STORAGE_CHANNEL_ID=

# Telegram Backup Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
